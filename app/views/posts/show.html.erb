<h2> <%= link_to @post.title, @post.link %> </h2>
<p> <%= @post.note %> </p>
<% if session[:user_id] %>
	<% if session[:user_id].to_s == @post.user_id.to_s %>
		<p> <%= link_to "Edit Post", "/posts/#{@post.id}/edit" %> </p>
	<% end %>
<% end %>

<h3> Comments </h3>
<% @post.comments.each do |comment| %>
	<p> <%= comment.text %> </p>
	<p><i> <%= User.find_by_id(comment.user_id).name %> </i></p>
	<% if session[:user_id] %>
		<% if session[:user_id].to_s == @post.user_id.to_s %>
			<p> <%= link_to "Delete Comment", [comment.post, comment], method: :delete %> </p>
		<% end %>
	<% end %>
<% end %>

<h3> Add a comment: </h3>
<%= form_for([@post, @post.comments.build]) do %>
	<textarea name="text" cols="80" rows="3"></textarea>
	<p> <input type="submit"> </p>
<% end %>