<div class="page-body">
	<div class="container-fluid">
		<h3>Add a New Post</h3>

		<%= form_tag "/posts" do %>
			<div class="row">
				<div class="col-xs-12 col-sm-10 col-md-8">
					<div class="form-group">
						<p><label>Title:</label> <input name="title" class="form-control"></p>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-10 col-md-8">
					<div class="form-group">
						<p><label>URL:</label> <input name="link" class="form-control"></p>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-10 col-md-8">
					<div class="form-group">
						<p><label>Note:</label>
						<textarea name="note" cols="80" rows="3" class="form-control"></textarea></p>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-10 col-md-8">
					<div class="form-group">
						<p><label>Tags (separated by commas):</label> <input name="tag_list" class="form-control"></p>
					</div>
				</div>
			</div>
			<p><input type="submit" class="btn btn-default"></p>
		<% end %>

	</div>
</div>