<div class="page-body">
    <div class="container-fluid">
        <h3>Edit Account</h3>

        <% if @user.errors.any? %>
          <ul class="list-unstyled text-danger">
            <% @user.errors.full_messages.each do |msg| %>
              <li><strong><%= msg %></strong></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_tag "/users/#{@user.id}", :method => "patch" do %>
            <div class="row">
                <div class="col-xs-12 col-sm-10 col-md-8">
                    <div class="form-group">
                        <p><label>Name:</label> <input name="name" value="<%= @user.name %>" class="form-control"></p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-10 col-md-8">
                    <div class="form-group">
                        <p><label>Email:</label> <input name="email" value="<%= @user.email %>" class="form-control"></p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-10 col-md-8">
                    <div class="form-group">
                        <p>
                            <%= label_tag :password, "Password:" %>
                            <input type="password" name="password" class="form-control"></p>
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-10 col-md-8">
                    <div class="form-group">
                        <p>
                            <%= label_tag :password_confirmation, "Password Again:" %>
                            <input type="password" name="password_confirmation" class="form-control"></p>
                        </p>
                    </div>
                </div>
            </div>

            <p><input type="submit" class="btn btn-default"></p>
        <% end %>

    </div>
</div>